+ */
+export async function loadComponents() {
+  const includeTargets = Array.from(document.querySelectorAll('[data-include]'));
+
+  await Promise.all(
+    includeTargets.map(async (target) => {
+      const path = target.getAttribute('data-include');
+      if (!path) return;
+
+      try {
+        const response = await fetch(path);
+        if (!response.ok) {
+          throw new Error(`Unable to load component: ${path}`);
+        }
+        const markup = await response.text();
+        target.innerHTML = markup;
+      } catch (error) {
+        console.error(error);
+        target.innerHTML = `<div class="bg-rose-100 text-rose-800 p-4 rounded-xl">${path} introuvable.</div>`;
+      }
+    })
+  );
+}
