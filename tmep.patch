+          ${caseStudy.results.map((result) => `<li>${result}</li>`).join('')}
+        </ul>
+        <blockquote class="rounded-2xl bg-emerald-50 p-4 text-sm text-emerald-900">‚Äú${caseStudy.testimonial}‚Äù</blockquote>
+        <a class="inline-flex items-center text-sm font-semibold text-emerald-700 hover:text-emerald-500" href="casestudies.html#${caseStudy.slug}">
+          Lire l'√©tude de cas
+          <span class="ml-1" aria-hidden="true">‚Üí</span>
+        </a>
+      </div>
+    </div>
+  `;
+  return container;
+}
+
+export async function initCaseStudyCarousel() {
+  const carousel = document.querySelector('[data-case-carousel]');
+  if (!carousel) return;
+
+  try {
+    const caseStudies = await fetchJson('assets/data/caseStudies.json');
+    const selected = caseStudies.slice(0, 3);
+    const track = carousel.querySelector('[data-case-carousel-track]');
+    const prevButton = carousel.querySelector('[data-case-carousel-prev]');
+    const nextButton = carousel.querySelector('[data-case-carousel-next]');
+    if (!track || !prevButton || !nextButton) return;
+
+    track.style.width = `${selected.length * 100}%`;
+    selected.forEach((item) => {
+      const slide = createCaseCard(item);
+      track.appendChild(slide);
+    });
+
+    let index = 0;
+    const updatePosition = () => {
+      track.style.transform = `translateX(-${index * (100 / selected.length)}%)`;
+    };
+
+    prevButton.addEventListener('click', () => {
+      index = (index - 1 + selected.length) % selected.length;
+      updatePosition();
+    });
+
+    nextButton.addEventListener('click', () => {
+      index = (index + 1) % selected.length;
+      updatePosition();
+    });
+
+    updatePosition();
+  } catch (error) {
+    console.error(error);
+  }
+}
