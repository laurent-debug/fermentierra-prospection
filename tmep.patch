+const cache = new Map();
+
+export async function fetchJson(path) {
+  if (cache.has(path)) {
+    return cache.get(path);
+  }
+
+  const response = await fetch(path);
+  if (!response.ok) {
+    throw new Error(`Impossible de charger ${path}`);
+  }
+  const data = await response.json();
+  cache.set(path, data);
+  return data;
+}
