+
+  try {
+    const posts = await fetchJson('assets/data/blogPosts.json');
+    const categories = ['Tous', ...new Set(posts.map((post) => post.category))];
+
+    const render = (category = '') => {
+      const filtered = category ? posts.filter((post) => post.category === category) : posts;
+      listContainer.innerHTML = filtered.map(createPostCard).join('');
+    };
+
+    renderCategories(filterContainer, categories, render);
+    render();
+  } catch (error) {
+    console.error(error);
+    listContainer.innerHTML = '<p class="rounded-2xl bg-rose-100 p-6 text-rose-800">Impossible de charger les articles pour le moment.</p>';
+  }
+}
+
+function renderArticleContent(container, content) {
+  content.forEach((block) => {
+    if (block.type === 'paragraph') {
+      const paragraph = document.createElement('p');
