+      <header class="space-y-4 text-center">
+        <p class="text-xs font-semibold uppercase tracking-widest text-emerald-500">${article.category}</p>
+        <h1 class="text-4xl font-semibold text-emerald-950">${article.title}</h1>
+        <p class="text-sm text-emerald-600">${new Date(article.date).toLocaleDateString('fr-CH')}</p>
