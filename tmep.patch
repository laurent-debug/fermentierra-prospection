+const emailRoutes = {
+  tasting: 'degustation@fermentierra.com',
+  subscription: 'abonnement@fermentierra.com',
+  'co-creation': 'innovation@fermentierra.com',
+  training: 'formation@fermentierra.com',
+  quote: 'devis@fermentierra.com',
+};
+
+function validateField(input) {
+  const errorElement = document.querySelector(`[data-error-for="${input.id}"]`);
+  if (!errorElement) return true;
+
+  let errorMessage = '';
+  if (input.hasAttribute('required') && !input.value.trim()) {
+    errorMessage = 'Ce champ est obligatoire.';
+  } else if (input.type === 'email' && input.value) {
+    const isValidEmail = /\S+@\S+\.\S+/.test(input.value);
+    if (!isValidEmail) {
+      errorMessage = 'Veuillez saisir un email valide.';
+    }
+  }
+
+  if (errorMessage) {
+    errorElement.textContent = errorMessage;
+    errorElement.classList.remove('hidden');
+    input.setAttribute('aria-invalid', 'true');
+    return false;
+  }
+
+  errorElement.textContent = '';
+  errorElement.classList.add('hidden');
+  input.removeAttribute('aria-invalid');
+  return true;
+}
+
+function attachValidation(form) {
+  const requiredFields = form.querySelectorAll('[required]');
+  requiredFields.forEach((field) => {
+    field.addEventListener('blur', () => validateField(field));
+  });
+}
+
+function buildMailtoUrl(data) {
+  const recipient = emailRoutes[data.interest] ?? 'contact@fermentierra.com';
+  const subject = encodeURIComponent(`Demande Fermentierra ¬∑ ${data.interest}`);
+  const body = encodeURIComponent(`Nom : ${data.name}\n√âtablissement : ${data.establishment}\nEmail : ${data.email}\nT√©l√©phone : ${data.phone ?? ''}\nInt√©r√™t : ${data.interest}\nMessage : ${data.message ?? ''}`);
+  return `mailto:${recipient}?subject=${subject}&body=${body}`;
+}
+
+function resetFormState(form) {
+  const successBanner = form.parentElement?.querySelector('[data-form-success]');
+  if (successBanner) {
+    successBanner.classList.remove('is-visible');
+  }
+}
+
+export function initializeContactForms() {
+  const forms = document.querySelectorAll('[data-contact-form]');
+  if (!forms.length) return;
+
+  forms.forEach((form) => {
+    attachValidation(form);
+
+    form.addEventListener('submit', (event) => {
+      event.preventDefault();
+      resetFormState(form);
+
+      const inputs = Array.from(form.elements).filter((element) => element instanceof HTMLInputElement || element instanceof HTMLTextAreaElement || element instanceof HTMLSelectElement);
+      const isValid = inputs.every((input) => {
+        if (input instanceof HTMLInputElement || input instanceof HTMLTextAreaElement || input instanceof HTMLSelectElement) {
+          return validateField(input);
+        }
+        return true;
+      });
+
+      if (!isValid) {
+        return;
+      }
+
+      const formData = Object.fromEntries(new FormData(form));
+      const mailto = buildMailtoUrl(formData);
+      window.location.href = mailto;
+
+      window.dispatchEvent(
+        new CustomEvent('fermentierra:form-submitted', {
+          detail: {
+            type: 'contact',
+            interest: formData.interest,
+            email: formData.email,
+          },
+        })
+      );
+
+      const successBanner = form.parentElement?.querySelector('[data-form-success]');
+      if (successBanner) {
+        successBanner.classList.add('is-visible');
+        successBanner.focus?.();
+      }
+
+      form.reset();
+    });
+  });
+}
+
+export function initializeNewsletterForms() {
+  const forms = document.querySelectorAll('[data-newsletter-form]');
+  forms.forEach((form) => {
+    form.addEventListener('submit', (event) => {
+      event.preventDefault();
+      const input = form.querySelector('input[type="email"]');
+      if (!input) return;
+
+      const isValidEmail = /\S+@\S+\.\S+/.test(input.value);
+      if (!isValidEmail) {
+        input.setCustomValidity('Adresse email invalide');
+        input.reportValidity();
+        return;
+      }
+
+      input.setCustomValidity('');
+      input.value = '';
+      const confirmation = document.createElement('p');
+      confirmation.className = 'text-xs text-emerald-200';
+      confirmation.textContent = 'Merci ! V√©rifiez votre bo√Æte mail pour confirmer votre inscription.';
+      form.appendChild(confirmation);
+
+      window.dispatchEvent(
+        new CustomEvent('fermentierra:form-submitted', {
+          detail: {
+            type: 'newsletter',
+          },
+        })
+      );
+    });
+  });
