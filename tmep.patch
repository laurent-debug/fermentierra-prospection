+    const body = container.querySelector('[data-article-body]');
+    if (body) {
+      renderArticleContent(body, article.content);
+    }
+  } catch (error) {
+    console.error(error);
+    container.innerHTML = '<p class="rounded-2xl bg-rose-100 p-6 text-rose-800">Impossible de charger cet article.</p>';
+  }
+}
